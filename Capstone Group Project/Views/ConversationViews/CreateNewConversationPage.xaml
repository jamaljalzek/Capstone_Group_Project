<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capstone_Group_Project.Views.CreateNewConversationPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Create conversation"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">

    <ContentPage.Content>

        <StackLayout Spacing="10" VerticalOptions="Center">

            <Label Text="{Binding DisplayedStatusMessage, Mode=OneWay}" FontSize="Medium" HorizontalOptions="Center"/>

            <Button Text="OK" Command="{Binding CancelCommand}" HorizontalOptions="Center"></Button>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>